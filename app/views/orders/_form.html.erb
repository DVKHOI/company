<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, size: 40,class: "form-control", placeholder: "Name" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address, rows: 3, size: 40, class: "form-control", placeholder: "Address" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, size: 40, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.label :telephone %>
    <%= f.text_field :telephone, size: 40, class: "form-control", placeholder: "Telephoe" %>
  </div>

  <div class="field">
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
