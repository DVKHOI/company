<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<h1>Products</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image 1</th>
      <th>Image 2</th>
      <th>Image 3</th>
      <th>Image 4</th>
      <th>Price</th>
      <th>Vote</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= image_tag(product.image_url, height: 100, height: 100 ) %></td>
        <td><%= image_tag(product.image1_url, height: 100, height: 100 ) %></td>
        <td><%= image_tag(product.image2_url, height: 100, height: 100 ) %></td>
        <td><%= image_tag(product.image3_url, height: 100, height: 100 ) %></td>
        <td><%= product.price %></td>
        <td><%= product.vote %></td>
        <td><%= truncate(product.description, length: 100) %></td>
        <td><%= product.category_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
<div class="pull-right">
  <%= paginate @products, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
</div>